<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundmainlight"
    tools:context="se.iths.apostolidis.quickmaths.QuestionActivity">

    <Button
        android:id="@+id/buttonAnswer1"
        android:layout_width="159dp"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_edges_button"
        android:elevation="2dp"
        android:fontFamily="sans-serif-condensed"
        android:onClick="onClickAnswerAlt1"
        android:text="Button"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonAnswer3"
        app:layout_constraintStart_toStartOf="@+id/buttonAnswer3" />

    <Button
        android:id="@+id/buttonAnswer2"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_edges_button"
        android:elevation="2dp"
        android:fontFamily="sans-serif-condensed"
        android:onClick="onClickAnswerAlt2"
        android:text="Button"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonAnswer4"
        app:layout_constraintEnd_toEndOf="@+id/buttonAnswer4" />

    <Button
        android:id="@+id/buttonAnswer3"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_marginBottom="148dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/rounded_edges_button"
        android:elevation="2dp"
        android:fontFamily="sans-serif-condensed"
        android:onClick="onClickAnswerAlt3"
        android:text="Button"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonAnswer4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonAnswer4"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_marginBottom="148dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_edges_button"
        android:elevation="2dp"
        android:fontFamily="sans-serif-condensed"
        android:onClick="onClickAnswerAlt4"
        android:text="Button"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonAnswer3" />

    <Button
        android:id="@+id/buttonNewQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/rounded_edges_button"
        android:fontFamily="@font/indie_flower"
        android:onClick="onClickNewQuestion"
        android:padding="15dp"
        android:text="New Question"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="0dp"
        android:layout_height="165dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:alpha="0.8"
        android:background="@color/white"
        android:fontFamily="@font/indie_flower"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.274" />

    <TextView
        android:id="@+id/textViewCountdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/indie_flower"
        android:text="Countdown"
        android:textSize="70sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewCorrectAnswer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="5dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/holo_green_light" />

    <ImageView
        android:id="@+id/imageViewWrongAnswer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="5dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/holo_red_dark" />


</android.support.constraint.ConstraintLayout>
