<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/indie_flower"
        android:text="Start new offline game"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14sp"
        android:fontFamily="@font/indie_flower"
        android:text="How many players:"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerNumberOfPlayers"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8sp">
    </Spinner>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:fontFamily="@font/indie_flower"
        android:text="Choose categories:"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="18dp">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkBoxHumor"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/indie_flower"
            android:text="Humor" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkBoxSport"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/indie_flower"
            android:text="Sport" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkBoxFilm"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/indie_flower"
            android:text="Film" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkBoxMusik"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/indie_flower"
            android:text="Musik" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="18dp">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkBoxHistoria"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/indie_flower"
            android:text="Historia" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkBoxGeografi"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/indie_flower"
            android:text="Geografi" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkBoxRandom"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/indie_flower"
            android:text="Random" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkBoxEsport"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/indie_flower"
            android:text="E-sport" />
    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="18dp">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkBoxMatte"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/indie_flower"
            android:text="Matte" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkboxGeografi"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/indie_flower"
            android:text="Geografi" />

        <android.support.v7.widget.AppCompatCheckBox
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/indie_flower"
            android:text="Film" />

        <android.support.v7.widget.AppCompatCheckBox
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/indie_flower"
            android:text="Musik" />
    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="18dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="42sp"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/indie_flower"
            android:text="Your categories"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <Button
            android:id="@+id/buttonOfflineModeContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="26dp"
            android:onClick="onClick"
            android:text="Continue"
            android:textAlignment="center"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>